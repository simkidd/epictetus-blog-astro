---
import CloseIcon from "./svgs/CloseIcon.astro";
import MenuIcon from "./svgs/MenuIcon.astro";
import SearchIcon from "./svgs/SearchIcon.astro";

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);

interface Menu {
  name: string;
  href: string;
}

const navlinks: Menu[] = [
  { name: "About", href: "/about" },
  { name: "Blog", href: "/blog" },
  { name: "Portfolio", href: "/portfolio" },
  // { name: "", href: "" },
];
---

<div class="navbar">
  <div class="navbar-inner container">
    <div id="menuBtn">
      <MenuIcon width={24} height={24} />
    </div>
    <a href="/" class="logo">
      <span>E</span>
      Epictetus
    </a>

    <ul class="nav" id="navLinks">
      <div class="close-btn">
        <CloseIcon width={24} height={24} />
      </div>
      {
        navlinks.map((nav) => {
          const active =
            currentPath === nav.href.slice(1) ||
            currentPath.startsWith(nav.href.slice(1) + "/");
          return (
            <li>
              <a href={nav.href} class={`nav-link  ${active && "active"}`}>
                {nav.name}
              </a>
            </li>
          );
        })
      }
    </ul>

    <div id="searchBtn">
      <SearchIcon width={24} height={24} />
    </div>

    <div class="search">
      <SearchIcon width={18} height={18} />
      <input type="text" placeholder="Search..." />
    </div>
  </div>
</div>

<style lang="scss">
  .navbar {
    width: 100%;
    position: sticky;
    top: 0;
    z-index: 10;
    &.scrolled{
      background: #374151;
    }

    .navbar-inner {
      padding-block: 71px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      @media screen and (max-width: 768px) {
        padding-block: 1.5rem;
      }

      #menuBtn {
        display: none;
        @media screen and (max-width: 768px) {
          display: flex;
          align-items: center;
          justify-content: center;
          cursor: pointer;
          width: 34px;
          height: 34px;
          border-radius: 4px;
        }
      }
      .logo {
        display: flex;
        align-items: center;
        gap: 11px;
        font-size: 18px;
        &:hover {
          color: #fff;
        }
        span {
          width: 35px;
          height: 35px;
          border-radius: 3px;
          background: #4b5563;
          box-shadow: 0px 15px 30px 0px rgba(0, 0, 0, 0.15);
          display: flex;
          align-items: center;
          justify-content: center;
          font-size: 18px;
          font-style: normal;
          font-weight: 600;
          line-height: normal;
        }
      }
      .nav {
        display: flex;
        align-items: center;
        gap: 45px;
        @media screen and (max-width: 768px) {
          position: absolute;
          top: 0;
          left: -100%;
          height: 100vh;
          width: 60%;
          display: flex;
          flex-direction: column;
          align-items: center;
          justify-content: center;
          background: #374151;
          transition: all 0.9s ease-in-out;
          &.show {
            left: 0;
          }
          .close-btn {
            position: absolute;
            top: 1.5rem;
            right: 16px;
            width: 34px;
            height: 34px;
            border-radius: 4px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
          }
        }
        .nav-link {
          font-size: 18px;
          padding-block: 0.3rem;
          border-bottom: 2px solid transparent;
          &.active {
            color: #758eb1;
            border-bottom: 2px solid #758eb1;
          }
        }
      }

      #searchBtn {
        display: none;
        @media screen and (max-width: 768px) {
          display: flex;
          align-items: center;
          justify-content: center;
          cursor: pointer;
          width: 34px;
          height: 34px;
          border-radius: 4px;
        }
      }
      .search {
        border-radius: 100px;
        background: rgba(31, 41, 55, 0.6);
        width: 224px;
        height: 40px;
        flex-shrink: 0;
        display: flex;
        align-items: center;
        padding-inline: 1rem;
        gap: 0.8rem;
        @media screen and (max-width: 768px) {
          display: none;
          &.show-search {
            display: flex;
            width: 100%;
          }
        }

        input {
          width: 100%;
          background: transparent;
          outline: 0;
          color: #fff;
          border: 0;
        }
      }
    }
  }
</style>

<script>
  const menuBtn = document.getElementById("menuBtn");
  const navLinks = document.getElementById("navLinks");
  const closeBtn = document.querySelector(".close-btn");
  const searchBtn = document.getElementById("searchBtn");
  const searchInput = document.querySelector(".search");
  const navbar = document.querySelector(".navbar");

  menuBtn?.addEventListener("click", () => {
    navLinks?.classList.add("show");
  });
  closeBtn?.addEventListener("click", () => {
    navLinks?.classList.remove("show");
  });

  searchBtn?.addEventListener("click", () => {
    searchInput?.classList.toggle("show-search");
  });

  // Add navbar background color on scroll
  if (navbar) {
    document.addEventListener("scroll", () => {
      if (window.scrollY > 0) {
        navbar.classList.add("scrolled");
      } else {
        navbar.classList.remove("scrolled");
      }
    });
  }
</script>
