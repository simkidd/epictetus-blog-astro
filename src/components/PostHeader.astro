---
import { Image } from "astro:assets";

// utils imports
import { formatDate, slugify } from "../utils/helpers.ts";
// interface Props {
//   frontmatter: {
//     title: string;
//     date: string;
//     category: string;
//   };
// }

const { title, date, category, image, author } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "../assets/images/*.{jpeg,jpg,png,gif}"
);
if (!images[image.src])
  throw new Error(
    `"${image.src}" does not exist in glob: "../assets/images/*.{jpeg,jpg,png,gif}"`
  );
// const posts = await Astro.glob("../pages/blog/*.md");
---

<div class="post-header">
  <div class="inner container">
    <p class="small-text">
      <span>
        <a href={`/category/${slugify(category)}`}>
          {category}
        </a>
      </span>
      &bull;
      <span>{formatDate(date)}</span>
    </p>
    <h2>
      {title}
    </h2>
    <div class="author">
      <div class="author-img">
        <Image src={images[author.image.src]()} alt={author.image.alt} />
      </div>
      <a href={`/author/${slugify(author.name)}`} class="author-name">{author.name}</a>
    </div>
    <div class="post-img">
      <Image src={images[image.src]()} alt={image.alt} />
    </div>
  </div>
</div>

<style lang="scss">
  .post-header {
    width: 100%;
    padding-bottom: 69px;
    .inner {
      display: flex;
      flex-direction: column;
      align-items: center;
      .small-text {
        font-size: 14px;
        font-weight: 400;
        line-height: normal;
        opacity: 0.6;
        margin-bottom: 11px;
      }
      h2 {
        font-size: 32px;
        font-weight: 400;
        line-height: 38px;
        color: #fff;
        text-align: center;
        margin-bottom: 30px;
        max-width: 525px;
        width: 100%;
      }
      .author {
        display: flex;
        align-items: center;
        gap: 16px;
        .author-img {
          width: 50px;
          height: 50px;
          border-radius: 50%;
          overflow: hidden;
          img {
            width: 100%;
            height: 100%;
            object-fit: cover;
          }
        }
      }
      .post-img {
        margin-top: 31px;
        width: 100%;
        max-width: 896px;
        height: 494px;
        border-radius: 5px;
        overflow: hidden;
        @media screen and (max-width: 768px) {
          height: 181px;
        }
        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
        }
      }
    }
  }
</style>
